<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3600BCD4"
    tools:context=".CourseDetails">

    <Button
        android:id="@+id/btn_deleteCourse"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:background="#E91E63"
        android:text="Delete Course"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_customers"
        android:layout_width="wrap_content"
        android:layout_height="348dp"
        android:background="#1400BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ListView>

    <TextView
        android:id="@+id/tv_participants"
        android:layout_width="212dp"
        android:layout_height="39dp"
        android:text="Participants:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_customers"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_addParticipant"
        android:layout_width="144dp"
        android:layout_height="68dp"
        android:background="#8BC34A"
        android:text="Add participant"
        app:layout_constraintBottom_toTopOf="@+id/lv_customers"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_returnToAllCourses"
        android:layout_width="161dp"
        android:layout_height="62dp"
        android:background="#009688"
        android:text="Return to courses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_numOfParticipantsPayed"
        android:layout_width="143dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_participants"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_numOfParticipantsDidntPay"
        android:layout_width="143dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_numOfParticipantsPayed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_saveCourseAsFile"
        android:layout_width="121dp"
        android:layout_height="65dp"
        android:layout_marginBottom="32dp"
        android:background="#9C27B0"
        android:text="download Course"
        app:layout_constraintBottom_toTopOf="@+id/btn_addParticipant"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>